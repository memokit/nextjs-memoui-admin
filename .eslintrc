{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "rules": {
        "no-console": 0,
        "indent": [
            0,
            0,
            {
                "SwitchCase": 1,
                "ObjectExpression": 1
            }
        ],
        "react/jsx-uses-vars": [
            2
        ],
        "semi": [
            2,
            "always"
        ],
        "linebreak-style": 0,
        "consistent-return": 0,
        "no-use-before-define": 0,
        "no-multi-assign": 0,
        "no-lonely-if": 1,
        "no-nested-ternary": 0,
        "wrap-iife": [
            2,
            "inside"
        ],
        // "jsx-quotes": [2, "prefer-double"],
        "generator-star-spacing": 0,
        "react/forbid-prop-types": 0,
        "react/sort-comp": 1,
        "react/no-string-refs": 0,
        "react/prefer-stateless-function": 0,
        //"react/prop-types": [2, { "ignore": ["children","router","href"] }],
        // "react/require-default-props": [2, { "forbidDefaultForRequired": true }],
        "jsx-a11y/no-static-element-interactions": 0,
        // "keyword-spacing": [2, { "before": true }],
        "eqeqeq": [
            2,
            "always"
        ],
        "space-infix-ops": [
            0,
            {
                "int32Hint": false
            }
        ],
        "spaced-comment": 0,
        "comma-spacing": [
            0,
            {
                "before": false,
                "after": true
            }
        ],
        "block-spacing": [
            0,
            "always"
        ],
        "no-else-return": 2
    },
    "extends": [
        "eslint:recommended"
        // "plugin:react/recommended"
    ],
    "plugins": [
        "react"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}